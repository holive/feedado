{
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.rulers": [
            100
        ]
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "go.formatTool": "goreturns",
    "go.formatFlags": [
        "-local",
        "gopkg.git"
    ],
    "go.lintTool": "gometalinter",
    "go.lintFlags": [
        "--disable-all",
        "--enable=gosec",
        "--enable=goconst",
        "--enable=gocyclo",
        "--enable=gofmt",
        "--enable=goimports",
        "--enable=golint",
        "--enable=ineffassign",
        "--enable=lll",
        "--enable=misspell",
        "--enable=vet",
        "--enable=vetshadow",
        "--aggregate",
        "--deadline=3s",
        "--line-length=100",
        "--min-confidence=.9",
        "--tests",
        "--vendor",
        "--linter=misspell:misspell -j 0 -i americanas,processer,Processer {path}/*.go:PATH:LINE:COL:MESSAGE",
        "--linter=gofmt:gofmt -s -w {path}/*.go:^(?P<path>.*?\\.go)$",
        "--linter=gosec:gosec -exclude=G104 -fmt=csv {path}/*.go:^(?P<path>.*?\\.go),(?P<line>\\d+),(?P<message>[^,]+,[^,]+,[^,]+)"
    ],
    "go.vetFlags": [
        "-all",
        "-shadow"
    ],
    "go.autocompleteUnimportedPackages": true,
    "go.docsTool": "gogetdoc",
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 2
    }
}